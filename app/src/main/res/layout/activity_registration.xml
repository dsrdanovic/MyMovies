<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="#ff57739b"
    tools:context="etf.mymovies.RegistrationActivity">

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Name:"
        android:id="@+id/tvName"
        android:layout_above="@+id/txtSurname"
        android:layout_alignParentLeft="true" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtName"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/txtSurname" />

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Surname:"
        android:id="@+id/tvSurname"
        android:layout_above="@+id/txtUsername"
        android:layout_alignParentLeft="true" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtSurname"
        android:layout_below="@+id/txtName"
        android:layout_alignLeft="@+id/txtUsername" />

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username:"
        android:id="@+id/tvUsername"
        android:layout_above="@+id/txtPassword"
        android:layout_alignParentLeft="true" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsername"
        android:layout_below="@+id/txtSurname"
        android:layout_alignLeft="@+id/txtPassword" />

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password:"
        android:id="@+id/tvPassword"
        android:layout_above="@+id/txtPasswordAgain"
        android:layout_alignParentLeft="true" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_below="@+id/txtUsername"
        android:layout_alignLeft="@+id/txtPasswordAgain" />

    <TextView
        android:textColor="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password again:"
        android:id="@+id/tvPasswordAgain"
        android:layout_alignBottom="@+id/txtPasswordAgain"
        android:layout_alignParentLeft="true" />

    <EditText
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="#FFFFFF"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPasswordAgain"
        android:layout_below="@+id/txtPassword"
        android:layout_alignParentRight="true" />

    <Button
        android:background="@drawable/custom_btn_arsenic"
        android:textColor="#ffffffff"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_action_send_now"
        android:paddingLeft="45dip"
        android:paddingRight="45dip"
        android:id="@+id/btnRegister"
        android:layout_below="@+id/txtPasswordAgain"
        android:layout_alignLeft="@+id/txtPasswordAgain"
        android:layout_alignRight="@+id/txtPasswordAgain"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Already registered? Login here"
        android:id="@+id/tvLogin"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>
